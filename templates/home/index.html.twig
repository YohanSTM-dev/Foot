{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Annuaire Sportif C'Chartres</h1>

    <div class="mb-4">
        {% if app.user %}
            <p>Bienvenue {{ app.user.Prenom }} !</p>
            <a href="{{ path('app_logout') }}" class="btn btn-secondary">Déconnexion</a>
        {% else %}
            <a href="{{ path('app_register') }}" class="btn btn-primary">Inscription</a>
            <a href="{{ path('app_login') }}" class="btn btn-success">Connexion</a>
        {% endif %}
    </div>

    <div class="row">
        {% for player in players %}
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="https://via.placeholder.com/300x200.png?text={{ player.Prenom }}+{{ player.Nom }}" class="card-img-top" alt="Photo de {{ player.Prenom }} {{ player.Nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ player.Prenom }} {{ player.Nom }}</h5>
                        <p class="card-text">Catégorie : {{ player.CategorieSportive.Nom }}</p>
                        <a href="{{ path('app_player_show', {'id': player.Id}) }}" class="btn btn-primary">Voir détails</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
